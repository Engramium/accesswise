{
    "name": "engramium/accesswise",
    "description": "Power to restrict your website and it's content via Age Gate, Force Login, Disable Right click",
    "type": "wordpress-plugin",
    "scripts": {
        "dev": [
            "@composer install"
        ],
        "build": [
            "@composer --no-plugins --no-interaction install --no-scripts --no-dev"
        ]
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "wp-coding-standards/wpcs": "^3.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "license": "GPL-3.0-or-later",
    "autoload": {
        "psr-4": {
            "Engramium\\Accesswise\\": "includes/"
        }
    },
    "authors": [
        {
            "name": "Sayedul Sayem",
            "email": "sayedulsayem@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
